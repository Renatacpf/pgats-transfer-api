{
  "name": "pgats-transfer-api",
  "version": "1.0.0",
  "description": "API REST + GraphQL para usuários e transferências de valores com autenticação JWT.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha 'test/**/*.test.js' --reporter mocha-allure-reporter",
    "test:controller": "mocha 'test/rest/controller/**/*.test.js' 'test/graphql/controller/**/*.test.js'",
    "test:rest": "mocha 'test/rest/**/*.test.js'",
    "test:graphql": "mocha 'test/graphql/**/*.test.js'",
    "test:external": "mocha 'test/rest/external/**/*.test.js' 'test/graphql/external/**/*.test.js'",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  },
  "dependencies": {
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "allure-commandline": "^2.24.0",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.8.2",
    "mocha-allure-reporter": "^1.4.0",
    "nodemon": "^3.0.3",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "supertest": "^7.1.4"
  }
}
